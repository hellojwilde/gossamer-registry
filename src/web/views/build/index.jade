include ../_mixins
extends _layout

block build-content
  .panel-body <strong>Hello friend!</strong> Pick your first experiment to test.

  .list-group
    form(action='/my/index.html', method='POST')
      for exp in exps
        .list-group-item
          .radio
            label
              input.pull-left(type='radio', name='expId', value=exp.id)
              +exp-info(exp)

      .list-group-item.clearfix
        input.btn.btn-default.btn-primary.pull-right(
          type='submit', 
          value='Start Testing'
        )
