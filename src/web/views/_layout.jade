extends _core

block page
  nav.navbar.navbar-default.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle.collapsed(
          type='button', 
          data-toggle='collapse', 
          data-target='#navbar-collapse'
        )
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Gossamer

      .navbar-collapse.collapse#navbar-collapse
        ul.nav.navbar-nav.navbar-right
          if isAuthenticated
            li
              a.navbar-user(href=user.profile.profileUrl)
                img.navbar-user-avatar.img-circle(
                  src=user.profile._json.avatar_url, 
                  alt='Avatar'
                )
                span.navbar-user-name=user.profile.displayName
            if user.isVouched
              li.navbar-user-voucher
                span.glyphicon.glyphicon-ok-sign(
                  data-toggle='tooltip',
                  data-placement='bottom',
                  title='Verified Mozillian'
                )
            li
              a(href='/user/logout') Log out
          else
            li
              a(href='/user/oauth') Log in with Github

  block content

